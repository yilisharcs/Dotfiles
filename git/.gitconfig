[init]
	defaultBranch = main
[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore
[diff]
	tool = nvimdiff
[merge]
	tool = nvimdiff
[pull]
	rebase = true
[rebase]
	autoStash = true
[alias]
	last	  = log -1 HEAD
	logd	  = log --decorate --oneline --graph
	st      = status
	unstage = reset HEAD --
[commit]
	gpgSign = true
[tag]
	gpgSign = true
