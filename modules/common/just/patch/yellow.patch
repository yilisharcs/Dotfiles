Subject: [PATCH] Make doc and command strings yellow

---
 src/color.rs  | 2 +-
 src/config.rs | 1 +
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/src/color.rs b/src/color.rs
index 7194d729..5cfc47c1 100644
--- a/src/color.rs
+++ b/src/color.rs
@@ -64,7 +64,7 @@ impl Color {
   }
 
   pub(crate) fn doc(self) -> Self {
-    self.restyle(Style::new().fg(Blue))
+    self.restyle(Style::new().fg(Yellow))
   }
 
   pub(crate) fn doc_backtick(self) -> Self {
diff --git a/src/config.rs b/src/config.rs
index b2a49d4e..abe7e48b 100644
--- a/src/config.rs
+++ b/src/config.rs
@@ -212,6 +212,7 @@ impl Config {
           .env("JUST_COMMAND_COLOR")
           .action(ArgAction::Set)
           .value_parser(clap::value_parser!(CommandColor))
+          .default_value("yellow")
           .help("Echo recipe lines in <COMMAND-COLOR>"),
       )
       .arg(
